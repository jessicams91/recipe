<div class="row">
  <aside class="">
  </aside>
  <section class="user_profile">
    <h1>Perfil de <%= @user.name %></h1>
    <span><%= @user.email %></span>
    <span><%= @user.city %></span>
    <% unless @user.facebook.nil? %>
      <span><%= link_to 'Facebook' , "https://www.facebook.com/#{@user.facebook}", target: '_blank' %></span>
    <% end %>
    <% unless @user.twitter.nil? %>
      <span><%= link_to 'Twitter' , "https://www.twitter.com/#{@user.twitter}", target: '_blank' %></span>
    <% end %>
<hr>
    <h2>Receitas de <%= @user.name %></h2>
    <%= render @user.recipes %>
  </section>
</div>
<aside>
