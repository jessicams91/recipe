<h1>Social Recipes</h1>
<h2>Últimas Receitas</h2>
<section id="last_recipes">
  <% @last_recipes.each do |recipe| %>
      <div class="last_recipes">
        <h3><%= link_to recipe.name, recipe %></h3>
        <p><%= image_tag recipe.photo.url(:medium) %><p>
        <p><%= recipe.preference.name %></p>
        <p><%= recipe.food_type.name %></p>
        <p><%= recipe.kitchen.name %></p>
        <p><%= recipe.difficulty %></p>
      </div>
      <hr>
  <% end %>
</section>
<h2>Preferidas dos usuários</h2>
<section id="favorite_recipes">
  <% @favorite_recipes.each do |recipe| %>
      <div class="favorite_recipes">
        <h3><%= link_to recipe.name, recipe %></h3>
        <p><%= image_tag recipe.photo.url(:medium) %><p>
        <p><%= recipe.preference.name %></p>
        <p><%= recipe.food_type.name %></p>
        <p><%= recipe.kitchen.name %></p>
        <p><%= recipe.difficulty %></p>
      </div>
      <hr>
  <% end %>
</section>
<aside>
  <h4>Cozinhas</h4>
  <% @kitchens.each do |kitchen| %>
    <p><%= link_to kitchen.name, kitchen %></p>
  <% end %>
</aside>
<hr>
<aside>
  <h4>Tipos</h4>
  <% @food_types.each do |food_type| %>
    <p><%= link_to food_type.name, food_type %></p>
  <% end %>
</aside>
<hr>
<aside>
<h4>Preferências</h4>
<% @preferences.each do |preference| %>
  <p><%= link_to preference.name, preference %></p>
<% end %>
</aside>
